<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AttractionImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AttractionNameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/image</item>
        <item name="android:layout_marginLeft">@dimen/info_text_margin</item>
        <item name="android:layout_marginRight">@dimen/info_text_margin</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/colorAttractionName</item>
        <item name="android:textSize">@dimen/attraction_name_text_size</item>
    </style>

    <style name="AttractionDescriptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/name</item>
        <item name="android:layout_marginLeft">@dimen/info_text_margin</item>
        <item name="android:layout_marginRight">@dimen/info_text_margin</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">@dimen/attraction_description_text_size</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
    </style>

    <style name="TabStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
